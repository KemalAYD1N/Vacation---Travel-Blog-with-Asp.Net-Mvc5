@using VacationTravelSite.Models.Sınıflar

@model List<Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>

@*<table border="1" width="100%">*@
<table class="table table-bordered" >

    <thead>
        <tr>
            <th>ID</th>
            <th>Başlık</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Baslik</td>
                <td><a href="/Admin/BlogSil/@item.ID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Admin/BlogGetir/@item.ID" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Blog/BlogDetay/@item.ID" class="btn btn-default">Detaylar</a></td>
            </tr>
        }

    </tbody>

</table>

<a href="/Admin/YeniBlog/" class="btn btn-primary">Yeni Blog</a>