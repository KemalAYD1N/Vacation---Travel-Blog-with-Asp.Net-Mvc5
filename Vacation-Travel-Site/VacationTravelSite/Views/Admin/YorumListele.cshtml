@using VacationTravelSite.Models.Sınıflar

@model List<Yorumlar>

@{
    ViewBag.Title = "YorumListele";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listele</h2>

<table class="table table-bordered">

    <thead>
        <tr>
            <th>ID</th>
            <th>Blog</th>
            <th>Kullanıcı Adı</th>
            <th>Mail</th>
            <th>Yorum</th>
            <th>Sil</th>
            <th>Güncelle</th>

        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>@item.ID</td>
            <td>@item.Blog.Baslik</td>
            <td>@item.KullaniciAdi</td>
            <td>@item.Mail</td>
            <td>@item.Yorum</td>
            <td><a href="/Admin/YorumSil/@item.ID" class="btn btn-danger" >Sil</a></td>
            <td><a href="/Admin/YorumGetir/@item.ID" class="btn btn-warning">Güncelle</a></td>

        </tr>
        }

    </tbody>

</table>

